{% extends 'base.html.twig' %}

{% block title %}Hello PokemonController!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <a href="{{ path('app_pokemon_gen', { 'gen' : 1 }) }}">Gen 1</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 2 }) }}">Gen 2</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 3 }) }}">Gen 3</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 4 }) }}">Gen 4</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 5 }) }}">Gen 5</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 6 }) }}">Gen 6</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 7 }) }}">Gen 7</a>
        <a href="{{ path('app_pokemon_gen', { 'gen' : 8 }) }}">Gen 8</a>
        <hr>
        <div class="flex">
            {% for pokemon in pokemons %}
                <a href="{{ path('app_pokemon_show', { 'id' : pokemon.id }) }}"><img src="https://img.pokemondb.net/artwork/avif/{{ pokemon.slug|lower }}.avif" alt="{{ pokemon.name }}" title="{{ pokemon.name }}" height="50"></a>
            {% endfor %}
        </div>
    </div>
    <div class="col-2"></div>
</div>


{% endblock %}